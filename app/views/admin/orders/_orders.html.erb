<div class="dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Filter by Status
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <% @statuses.each do |status| %>
      <li> <%= link_to "#{status.name}", admin_dashboard_path(filter_by: status.name) %> </li>
    <% end %>
  </ul>
</div>

<div class="list-group">
  <% @orders.each do |order| %>
    <%= link_to order_path(order_id: order.id), id: "order_#{order.id}", class: "list-group-item" do %>
      <strong>Customer Name:</strong> <%= order.customer.first_name %> <%= order.customer.last_name %>
      <strong>Customer Id:</strong> <%= order.customer.id %>
      <strong>Order Total:</strong> <%= number_to_currency(order.total_price_in_dollars) %>
      <strong>Date:</strong> <%= order.date %>
      <strong>Status:</strong>
      <span class="status_<%= order.status_name.downcase %>">
        <%= order.status.name.capitalize %>
      </span>
    <% end %>
  <% end %>
</div>
