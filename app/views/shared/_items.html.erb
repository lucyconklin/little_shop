<% @items.each do |item| %>
  <div class="col-sm-6 col-md-4">
    <div id="item_<%= item.id %>" class="thumbnail">
      <%= link_to item_path(item) do %>
        <img src=<%= item.image_url %> alt=<%= item.title %>>
        <div class="caption">
          <h3><%= item.title %></h3>
        </div>
      <% end %>
      <button class="btn btn-info add_to_cart">Add to cart</button>
    </div>
  </div>
<% end %>
