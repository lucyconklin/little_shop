<% @items.each_slice(4) do |four_items| %>
  <div class="row">
    <% four_items.each_slice(2) do |two_items| %>
      <div class="col-md-6">
        <div class="row">
          <% two_items.each do |item| %>
            <div class="col-sm-6">
              <%= render partial: 'shared/item', locals: {item: item} %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
