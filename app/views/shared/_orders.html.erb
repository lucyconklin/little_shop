<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th> Customer Name </th>
        <th> Order ID</th>
        <th> Customer ID </th>
        <th> Order Total </th>
        <th> Order Date </th>
        <th> Order Status </th>
        <th> Mark as completed </th>
        <th> Mark as paid </th>
        <th> Cancel </th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr class="order_<%= order.id %>">
          <td> <%= order.customer.first_name %> <%= order.customer.last_name %> </td>
          <td> <%= link_to "order_#{order.id}", order_path(order_id: order.id) %></td>
          <td> <%= order.customer.id %> </td>
          <td> <%= number_to_currency(order.total_price_in_dollars) %> </td>
          <td> <%= order.date %> </td>
          <td>
            <span class="status_<%= order.status_name.downcase %>">
              <%= order.status.name.capitalize %>
            </span>
          </td>
          <td>
            <%= button_tag "Mark as completed", class: "button-submit" if order.status.name == "paid" %>
          </td>
          <td>
            <%= button_tag "Mark as paid", class: "button-submit" if order.status.name == "ordered" %>
          </td>
          <td>
            <%= button_tag "Cancel", class: "button-delete" if order.status.name == "ordered" || order.status.name == "paid" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
