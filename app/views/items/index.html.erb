<h1>All wooden goods</h1>
<% @items.each do |item| %>
  <div class="col-sm-6 col-md-4">
    <div id="item_<%= item.id %>" class="thumbnail">
      <%= link_to item_path(item) do %>
        <img src=<%= item.image_url %> alt=<%= item.title %>>
        <div class="caption">
          <h3><%= item.title %></h3>
        </div>
        <%= button_to "Add to cart", carts_path, class:"btn btn-info add_to_cart" %>
      <% end %>
    </div>
  </div>
<% end %>
