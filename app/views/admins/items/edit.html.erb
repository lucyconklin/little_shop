<h1>Edit item</h1>

<%= bootstrap_form_for(@item) do |f| %>
  <%= f.text_field :title, placeholder: "Title" %>
  <%= f.text_area :description, placeholder: "Description" %>
  <%= f.text_field :image_url, placeholder: "Image" %>
  <%= f.select :retired, ["True","False"], placeholder: "#{@item.retired}" %>
  <%= f.submit "Update", class: "btn btn-success btn-block" %>
<% end %>
