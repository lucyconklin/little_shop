<div class="container">
  <h1>Admin Dashboard</h1>
  <p>First name: <%= @admin.first_name %></p>
  <p>Last name: <%= @admin.last_name %></p>
  <p>Email: <%= @admin.email %></p>
  <p><%= link_to "Edit Profile", edit_admin_path(@admin) %></p>
</div>

<h2>Order History for all Customers</h2>

<div class="dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Filter by Status
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <% @status_name.each do |status, quantity| %>
      <li> <%= link_to "#{status.name} #{quantity}", admin_dashboard_path(filter_by: status.name) %> </li>
    <% end %>
  </ul>
</div>

<% if @orders.any? %>
  <%= render partial: 'shared/orders' %>
<% else %>
  <p>There have been no orders placed at this time.</p>
<% end %>
