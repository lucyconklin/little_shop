<div class="container">
  <h1>Login</h1>
  <%= form_tag '/login', :class => "form-horizontal center" do %>
    <div class="form-group">
      <%= label_tag :email, "Email", class: "control-label" %>
      <%= text_field_tag :email, params[:email], class: "form-control", autofocus: true, placeholder: "example@email.com" %>
    </div>

    <div class="form-group">
      <%= label_tag :password, "Password", class: "control-label" %>
      <%= password_field_tag :password, params[:password], class: "form-control", autofocus: true, placeholder: "Password" %>
    </div>

    <%= submit_tag "Login", class: "btn btn-success btn-block" %>
  <% end %>

  <p>
    Don't have an account?
    <%= link_to "Create Account", new_customer_path %>
  </p>
</div>
