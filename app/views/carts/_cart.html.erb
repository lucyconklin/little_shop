
<% @cart.items_with_quantities.each do |item, quantity| %>
  <div class="row">
    <div class="col-md-offset-2 col-md-2">
      <div class="thumbnail">
        <%= image_tag(item.image_url, alt: item.title) %>
      </div>
    </div>
    <div class="col-md-4" id="item_<%= item.id %>">
      <p><%= item.title %></p>
      <p><%= item.description %></p>
      <p><%= quantity %> x <%= number_to_currency(item.price_in_dollars) %>
      <%= link_to "-", cart_path(item_id: item.id), method: :delete %>
      <%= link_to "+", cart_path(item_id: item.id), method: :post%></p>
    <%= link_to "Remove", cart_path(item_id: item.id, :remove => "remove"), method: :delete %>
  </div>
</div>
<% end %>
<div class="row">
  <div class="col-md-offset-2 col-md-2">
    <h3>Subtotal:</h3>
  </div>
  <div class="col-md-4">
    <h3 class="text-right"><%= number_to_currency(@cart.total_price_in_dollars) %></h3>
  </div>
</div>
