<header>
  <nav class="navbar navbar-fixed-top navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">
          <span class="glyphicon glyphicon-tree-conifer"></span>
          Timber Shop
          <span class="glyphicon glyphicon-tree-conifer"></span>
        </a>
      </div>

      <% if current_customer? %>
        <div class="logged-in-message">
          Logged in as <%=link_to "#{current_customer.first_name} #{current_customer.last_name}", dashboard_path %>
        </div>
      <% end %>
      <% if current_admin? %>
        <div class="logged-in-message">
          Logged in as Admin: <%=link_to "#{current_admin.first_name} #{current_admin.last_name}", admin_dashboard_path %>
        </div>
      <% end %>

    <ul class="nav navbar-nav pull-right">

      <li>
        <% if current_admin? %>
          <%= link_to "Log out", admin_logout_path, method: :delete %>
        <% elsif current_customer? %>
          <%= link_to "Log out", logout_path %>
        <% else %>
          <%= link_to "Log in", login_path %>
        <% end %>
      </li>

      <li> <%= link_to "Items", items_path, class: "nav" %> </li>

      <li class="dropdown">
        <a href="#" class="dropdown-toggle nav" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Categories
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <% categories.each do |category| %>
            <li> <%= link_to "#{category.name}", category_path(category) %> </li>
          <% end %>
        </ul>
      </li>

      <li class="view-cart" >
        <%= link_to cart_path do %>
          <span class="hidden">View cart</span>
          <div class="cart">
            <span class="cart_counter"><%= @cart.number_of_items %></span>
            <span class="glyphicon glyphicon-shopping-cart"></span>
          </div>
        <% end %>
      </li>

    </ul>
  </div>
</nav>
</header>
